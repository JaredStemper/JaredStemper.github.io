name: Docker image Builder

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:

  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: Build the Docker image
      run: docker build . --file resume/Dockerfile --tag latexresume
    - name: run docker image
      run: export CR_PAT=BUILD_GITHUB_TOKEN
      run: echo $CR_PAT | docker login ghcr.io -u jaredstemper --password-stdin
    - name: docker push ghcr.io/jarestemperwebsite/latexresume
